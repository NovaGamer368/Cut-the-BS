@model User

<form asp-controller="Login" asp-action="NewUser" method="post">
    <div class="border p-3 mt-4">
        <div class="row">
        </div>
        <div class="row">
            <h2>
                Login
                <hr />
            </h2>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>        
        <button type="submit" class="btn navColor"> Login </button>
        <div class="row">
            <a asp-controller="Login" asp-action="NewUser">New User?</a>

        </div>

    </div>
</form>