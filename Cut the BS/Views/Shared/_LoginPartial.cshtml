@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" class="nav-link btn navColor2 border border-2 border-dark text-dark p-2 mx-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <form id="logoutForm" class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class=" nav-link btn navColor2 border border-2 border-dark text-dark text-dark p-2">Logout</button>
    </form>
    }
else
{
    <a class="nav-link btn navColor2 border border-2 border-dark text-dark p-2 mx-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link btn navColor2 border border-2 border-dark text-dark p-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
