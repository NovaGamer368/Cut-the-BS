@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link btn navColor2 border border-2 border-dark text-dark p-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class=" nav-link btn navColor2 border border-2 border-dark text-dark text-dark p-3">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link btn navColor2 border border-2 border-dark text-dark p-3" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item mt-2">
            <a class="nav-link btn navColor2 border border-2 border-dark text-dark p-3" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
