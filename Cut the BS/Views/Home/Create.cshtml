@model Recipe

<form asp-controller="Home" asp-action="Create" method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Recipe
                <hr />
            </h2>
        </div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Ingrediants"></label>
            <input asp-for="Ingrediants" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Instructions"></label>
            <input asp-for="Instructions" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Add Recipe</button>
        <a asp-controller="Home" asp-action="Communism" class="btn btn-secondary">Recipe Page</a>

    </div>

</form>