@model Recipe

@if (Model == null)
{
    <h2>
        No Community Recipes found
    </h2>
}
else
{
    <br />
    <h3>@Model.Title</h3>
    <h3>@Model.Instructions</h3>
    <h3>@Model.Ingrediants</h3>
    <h3>@Model.Catagory</h3>
    <br />
    <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger mx-2">
        Edit
    </a>

    <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-2">
        Delete
    </a>
    <br />
}